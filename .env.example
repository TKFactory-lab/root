# .env.example - example environment variables for local development
# Copy this to .env and fill with real values (do NOT commit .env)

OPENAI_API_KEY=REPLACE_ME_OPENAI_KEY
REDMINE_URL=http://redmine:3000
# Redmine tokens (one of these or personal access tokens)
NOBUNAGA_API_KEY=REPLACE_ME_NOBUNAGA_TOKEN
IEYASU_API_KEY=REPLACE_ME_IEYASU_TOKEN
HIDE_API_KEY=REPLACE_ME_HIDE_TOKEN

# Secret key for rails runner and scheduler
SECRET_KEY_BASE=REPLACE_ME_SECRET_KEY_BASE

# CrewAI webhook / agent config
CREWAI_AGENT_WEBHOOK=http://crewai_app:8000/webhook
CREWAI_AGENT_TOKEN=REPLACE_ME_CREWAI_AGENT_TOKEN
CREWAI_AGENT_USERS=nobu,hide,yasu
